extends  ../../_part/_baseShell

block head
	title Dashboard
	include ../../_part/_header

block main
	.mui-container-fluid
		.mui-col-xs-12 
			p
			p Dashboard
		.mui-col-xs-6.mui-col-md-3
			.mui-panel
				circle-el
		.mui-col-xs-6.mui-col-md-3
			.mui-panel
				list-el
		.mui-col-xs-12.mui-col-md-6
			.mui-panel
				gauge-el


	script.
		TS.onAppReady(UIinit)
		function UIinit() {
			TS.load('/page/list/ListBusiness.js',  function(){
				TW.loadComp('/_webComps/List.html', $('#comps'), listInit)}) 
				TW.loadComp('https://rawgit.com/topseed/topseed-webcomps/master/_webComp/circle.html', 
					$('#comps'), function(){ListBusiness().compInit('circle-el')})
				TW.loadComp('https://rawgit.com/topseed/topseed-webcomps/master/_webComp/gauge.html', 
					$('#comps'), function(){ListBusiness().compInit('gauge-el')})
		}

		function listInit() {
			const sb = ListBusiness()
			sb.compInit('list-el') //setup message bus, calls comp.init
			sb.compList('list-el')
		}

block footer
	include ../../_part/_footer